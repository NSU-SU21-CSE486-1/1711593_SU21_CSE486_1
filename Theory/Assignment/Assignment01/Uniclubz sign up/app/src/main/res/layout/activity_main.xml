<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signuppic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7CCEC"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/signuppic"
        android:layout_width="353dp"
        android:layout_height="302dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/signuppic"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <EditText
        android:id="@+id/enter_emai_signup"
        style="Port Lligat Slab"
        android:layout_width="278dp"
        android:layout_height="40dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="34dp"
        android:background="@color/white"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:hint="@string/enter_your_email"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textColor="#3C0A090B"
        android:textColorHint="#66D9B7DF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signuppic" />
</androidx.constraintlayout.widget.ConstraintLayout>